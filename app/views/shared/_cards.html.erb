<div class="cards">
  <% @listings.each do |listing| %>
    <%if listing.user == current_user %>
    <% else %>
      <%= link_to listing_path(listing), :action => 'go' do %>
      <div class="card-trip">
        <% if listing.photos.any? %>
          <%= cl_image_tag listing.photos.first.url, :gravity=>"auto", :height=>1143, :quality=>"auto", :width=>2763, :crop=>"fill" %>
        <% else %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg">
        <% end %>
        <div class="card-trip-infos">
          <div>
            <p class="small-grey-upcase"><%= listing.property_type.upcase %></p>
            <h2 id="listing-name"><%= listing.name %></h2>
          </div>
          <h2 class="card-trip-pricing"><%= listing.nightly_rate %> â‚¬</h2>
          <% if listing.user.photo.url.nil? %>
          <%= image_tag "agustin.jpg", class: "card-trip-user avatar-bordered" %>
          <% else %>
          <%= cl_image_tag listing.user.photo.url, :gravity=>"auto", :height=>40, :quality=>"auto", :width=>40, :crop=>"fill", class: "card-trip-user avatar-bordered" %>
          <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>
