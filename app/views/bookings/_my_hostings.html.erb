<% @bookings.each do |trip| %>
  <li class="message">
    <div class="booker-photo">
      <% if trip.user.photo.url.nil? %>
        <%= image_tag "agustin.jpg", class: "user-avatar" %>
      <% else %>
        <%= cl_image_tag trip.user.photo.url, class: "user-avatar" %>
      <% end %>
    </div>
    <div class="user">
    <h3><%= trip.user.first_name %></h3>
      <p><%= trip.checkin_date.strftime("%A, %b %d") %></p>
      <p><%= trip.guests_number %> Travellers</p>

    </div>
    <div class="user-message">
      <p class="bold"><%= link_to trip.listing.name, listing_path(trip.listing) %></p>
      <p class="fade-font"><%= trip.trip_details %></p>
    </div>
    <div class="user-status">
      <p>
        <%= link_to raw('<i class="fas fa-check-square"></i>'), "#" , class: 'bold accepted', style: 'color: green' %> <%= link_to raw('<i class="fas fa-times"></i>'), "#" , class: 'bold declined', style: 'color: red' %>
      </p>
      <p>$<%= trip.total_price %></p>
    </div>
  </li>
<% end %>
